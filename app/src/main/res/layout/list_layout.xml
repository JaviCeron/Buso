<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBE9"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="6dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="0dp"
        card_view:cardBackgroundColor="#E4E9EC"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">


        <TextView
            android:id="@+id/textViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Id: "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textViewId1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewId"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:text="1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/textViewnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewId1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="0dp"
            android:textColor="#000"
            android:paddingRight="15dp"
            android:text="Nombre"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewnombre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewnombre"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:text="San Vicente"
             />



    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>